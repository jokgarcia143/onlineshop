<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="OnlineShop.App.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:OnlineShop.App"
    xmlns:auth="clr-namespace:OnlineShop.App.MVVM.Views.Authentication"
    xmlns:customer="clr-namespace:OnlineShop.App.MVVM.Views.Customer"
    xmlns:product="clr-namespace:OnlineShop.App.MVVM.Views.Product"
    xmlns:user="clr-namespace:OnlineShop.App.MVVM.Views.User"
    Shell.FlyoutBehavior="Disabled"
    Title="OnlineShop.App">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

    <ShellContent
        ContentTemplate="{DataTemplate auth:LoginPage}"
        Route="LoginPage" />

    <ShellContent
    Title="Login"
    ContentTemplate="{DataTemplate user:UserPage}"
    Route="UserPage" />


</Shell>
