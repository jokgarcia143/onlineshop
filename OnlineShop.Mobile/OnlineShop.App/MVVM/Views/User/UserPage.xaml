<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShop.App.MVVM.Views.User.UserPage"
             Title="UserPage">
    <Grid RowDefinitions=".2*,.8*">
        <VerticalStackLayout>
            <Label Text="User Page"></Label>
            <Entry x:Name="txtUserName" Placeholder="User Name" ></Entry>
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="true"></Entry>
            <Entry x:Name="txtEmail" Placeholder="Email" ></Entry>
            <Entry x:Name="txtRole" Placeholder="User Role" ></Entry>
        </VerticalStackLayout>
        <Button Text="Add/Update" Clicked="Button_Clicked_1" Margin="50"></Button>
    </Grid>
</ContentPage>