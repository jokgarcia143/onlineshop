<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OnlineShop.App.MVVM.Views.Authentication.LoginPage">
    <VerticalStackLayout Margin="100" Spacing="10">
        <Image Source="splash" />

        <Frame HasShadow="True" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="50">
            <Entry x:Name="txtUser" Placeholder="UserName" HeightRequest="70"></Entry>
        </Frame>


        <Frame HasShadow="True" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" HeightRequest="50">
            
            <Entry x:Name="txtPassword" Placeholder="Password" IsPassword="True"></Entry>
        </Frame>
        
        <Button x:Name="btnLogin" Text="Login" Style="{StaticResource ButtonSecondaryBorder}" WidthRequest="300" Command="LoginCommand"></Button>
        <Button x:Name="btnRegister" Text="Register" Style="{StaticResource ButtonSecondaryBorder}" WidthRequest="300" Clicked="btnRegister_Clicked"></Button>
    </VerticalStackLayout>
</ContentPage>